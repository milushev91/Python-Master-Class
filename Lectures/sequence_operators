string1 = "he's "
string2 = "probably "
string3 = "pining "
string4 = "for the fjords"

# Concatenation using the + operator and implicit concatenation
print(string1 + string2 + string3 + string4) #he's probably pining for the fjords

#In Python, string literals placed next to each other are automatically concatenated.
print("he's " "probably " "pining " "for the fjords") #he's probably pining for the fjords

variable = "he's " "probably " "pining " "for the fjords"
print(variable) #he's probably pining for the fjords

#In Python, you can also use the * operator to repeat strings.
print("Hello " * 5) #Hello Hello Hello Hello Hello

print("Hello " * (5 + 4)) #Hello Hello Hello Hello Hello Hello Hello Hello Hello
print("Hello " * 5 + "4") #Hello Hello Hello Hello Hello 4

#Check if a substring exists within a string using the 'in' operator.
today = "Friday"
print("day" in today)  #True
print("fri" in today)  #False (case-sensitive)
